<section class="card">
    <header><a href="/comment/{{id}}">{{title}}</a></header>
    <p>Posted by {{user.name}} on {{format_date created_date}}</p>
  <p class="card-body">{{body}}</p>
      {{#each comments as |comment|}}
        <section class="card">
        <p>Commented by {{this.user.name}}</p>
        <p class="card-body">{{content}}</p>
        </section>
    {{/each}}
</section>