
<div class="table-responsive-xl d-grid gap-5">
<table class="table table-striped table-dark table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col-xl">Title</th> 
      <th scope="col">Author</th>
      <th scope="col-sm">Comments</th>
      <th scope="col-sm">Time</th>
    </tr>
  </thead>
      {{#each posts as |post|}}
  <tbody class="">
    <tr class="">
      <th class="row" scope="row"><a class="col-9" href="/comment/{{id}}">{{post.title}}</a>
      <div class="col-4">{{post.body}}</div></th>
      <td>{{user.name}}</td>
      <td>{{post.comments.length}}</td>
      <td>{{format_date post.created_date}}</td>
    </tr>
  </tbody>
  {{/each}}
</table>
</div>