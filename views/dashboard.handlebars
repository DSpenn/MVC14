<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input " type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">Post Content:</label>
        <textarea class="form-control form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit form-control" class="btn btn-primary form-control">Create</button>
      </div>
    </form>
  </div>
  {{#if posts.length}}
    <div class="col-md-6">
      <h3>Current Posts:</h3>
    <div class="post-list">
      {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/comment/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger form-control" data-id="{{this.id}}">DELETE</button>
            <button class="btn btn-sm form-control" data-editid="{{this.id}}">Update</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>
