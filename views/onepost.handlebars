<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{user.name}} on {{format_date created_date}}</p>
  <p><span>{{body}}</span></p>
  <div class="comment-list">
    {{#each comments as |comment|}}
      <section class="card">
      <p>Commented by {{user.name}} {{user.id}}</p>
      <p class="card-body">{{content}}
        {{log '../sesUId current user' ../sesUId}}
        {{log 'this' this}}
        {{log 'this.user_id' this.user_id}}
        {{log 'user_id ' user_id}}

      {{#if (isEqual ../sesUId user_id)}} 
      <button class="card-text btn btn-sm btn-danger" data-id="{{this.id}}">DELETE</button></p>
       {{/if}}
      </section>
    {{/each}}
</div></div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>New Comment:</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-body">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>
